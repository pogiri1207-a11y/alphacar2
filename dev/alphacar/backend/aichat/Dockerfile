FROM node:20-alpine
WORKDIR /app

RUN apk add --no-cache libc6-compat

# 5. ê²°ê³¼ë¬¼ ë³µì‚¬
# aichatì˜ ë¹Œë“œ ê²°ê³¼ë¬¼ì„ ê°€ì ¸ì˜µë‹ˆë‹¤.
